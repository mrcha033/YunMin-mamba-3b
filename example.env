# YunMin-Mamba 3B Training Environment Variables
# Copy this file to .env and modify as needed

# Docker Build Configuration (Optional - customize for your GPU)
CUDA_VERSION=12.1.1
CUDNN_VERSION=8
UBUNTU_VERSION=22.04

# S3 Dataset Configuration
S3_BUCKET=yeongjopt-ai-bucket
S3_PATH=dataset/tagged
LOCAL_DATASET_PATH=dataset/tagged

# Training Configuration
BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=8
LEARNING_RATE=5e-5
NUM_EPOCHS=1

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# Paths
CHECKPOINT_DIR=checkpoints
LOG_DIR=logs

# HuggingFace Configuration
HF_HOME=/root/.cache/huggingface
TOKENIZER_NAME=mrcha033/YunMin-tokenizer-96k

# Monitoring
TENSORBOARD_PORT=6006 